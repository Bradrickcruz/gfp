{
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": ["./dist", "./node_modules"],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-undef": "warn",
    "no-console": "off"
  }
}
